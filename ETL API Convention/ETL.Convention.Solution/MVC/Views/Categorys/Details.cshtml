@model Domain.Entities.Category
@{
    ViewData["Title"] = "Details";
}

<div class="row offset-2 CardOffset">
    <div class="col-md-10 col-lg-10 col-sm-10 p-4 ClCard">

        <!--TITLE-->
        <div class="pagetitle">
            <h1 class="card-title fs-2 mb-0">Category</h1>
            <hr class="customhr mt-0">
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12">
                <!--ALERT MESSAGE-->
                @if (TempData[Utilities.Constants.SessionConstants.Message] != null)
                {
                    <div class="row g-3 me-0 ms-0 mt-1">
                        <div class="alert alert-success" role="alert">
                            @TempData[Utilities.Constants.SessionConstants.Message]
                        </div>
                    </div>
                }
                <!--CARD START-->
                <div class="card table-responsive mt-3 p-3">
                    <div class="card-body">

                        <h4 class="card-title fs-4">Category Details</h4>
                        <hr class="mt-0" />

                        <!--CATEGORY NAME-->
                        <div class="row mt-3">
                            <div class="col-lg-5 col-md-5 col-sm-5 col-6 label fw-bolder"> Category </div>
                            <div class="col-lg-5 col-md-7 col-sm-7 col-6"> : @Model.CategoryName </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-lg-5 col-md-5 col-sm-5 col-6 label fw-bolder"> Category </div>
                            <div class="col-lg-5 col-md-7 col-sm-7 col-6"> : @Model.Available </div>
                        </div>

                    </div>
                </div>
                <!--CARD END-->
                <!--ACTION-->
                <div class="text-center">
                    <a asp-controller="Categorys" asp-action="Index" class="btn btn-secondary justify-content-center"><i class="bi bi-check2-circle"></i> Finish</a>
                </div>

            </div>
        </div>

    </div>
</div>
