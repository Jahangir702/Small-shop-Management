@model IEnumerable<Domain.Entities.Product>
@{
    ViewData["Title"] = "Index";
    int sl = 1;
}
<div class="row offset-2 CardOffset">
    <div class="col-md-10 col-lg-10 col-sm-10 p-4 ClCard">

        <!--TITLE-->
        <div class="pagetitle row mb-1">
            <div class="col-md-6">
                <h1 class="card-title fs-2 mb-0">Products</h1>
                <hr class="customhr mt-0 mb-2">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-12">
                <a class="btn btn-primary" href="/Products/Create"><i class="bi bi-plus-circle"></i> Add new</a>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-12 mt-2 mt-sm-0">
                <form method="get" action="/Products/Index">
                    <div class="input-group">
                        <input type="text" name="search" class="form-control p-2" placeholder="Search by Name">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </form>
            </div>
        </div>

        @if (Model.Any())
        {
            <div class="row mt-2">
                <div class="col-md-12 col-sm-12">

                    <!--CARD START-->
                    <div class="card table-responsive">
                        <div class="card-body">
                            <h5 class="card-title">Product List</h5>

                            <!-- TABLE -->
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">Product</th>
                                        <th scope="col">Price</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>

                                @foreach (var product in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <th scope="row">@sl</th>
                                            <td>@product.Categorys.CategoryName</td>
                                            <td>@product.ProductName</td>
                                            <td>@product.Price</td>
                                            <td>
                                                <a class="btn btn-md btn-sm btn-outline-primary" asp-controller="Products" asp-action="Edit" asp-route-id="@product.ProductId"><i class="bi bi-pencil-square"></i> Edit</a>
                                            </td>
                                        </tr>
                                    </tbody>
                                    sl++;
                                }
                            </table>

                        </div>
                    </div>
                    <!--CARD END-->

                </div>
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center fs-5 mt-4" role="alert">
                <div class="row">
                    <div class="col-md-12">
                        <p class="mt-3">No records found.</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>